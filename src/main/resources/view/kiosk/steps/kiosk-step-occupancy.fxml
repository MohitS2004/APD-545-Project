<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.blueharbor.hotel.controller.kiosk.OccupancyStepController"
      spacing="12">
    <Label text="Who's staying with us?" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <HBox spacing="12">
        <VBox spacing="6">
            <Label text="Adults"/>
            <Spinner fx:id="adultSpinner" editable="true"/>
        </VBox>
        <VBox spacing="6">
            <Label text="Children"/>
            <Spinner fx:id="childSpinner" editable="true"/>
        </VBox>
    </HBox>
    <Label text="We use this to make sure everyone is comfortable within occupancy rules." wrapText="true"/>
    <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
</VBox>
