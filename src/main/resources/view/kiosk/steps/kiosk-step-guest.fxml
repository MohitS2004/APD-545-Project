<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.blueharbor.hotel.controller.kiosk.GuestStepController"
          vgap="12" hgap="12">
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>
    <Label text="Guest details" style="-fx-font-size: 20px; -fx-font-weight: bold;" GridPane.columnSpan="2"/>

    <Label text="First name*" GridPane.rowIndex="1"/>
    <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Last name*" GridPane.rowIndex="2"/>
    <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Email*" GridPane.rowIndex="3"/>
    <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Phone*" GridPane.rowIndex="4"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Special requests" GridPane.rowIndex="5"/>
    <TextArea fx:id="notesArea" GridPane.rowIndex="5" GridPane.columnIndex="1" prefRowCount="2"/>

    <Label text="Loyalty program" GridPane.rowIndex="6"/>
    <CheckBox fx:id="loyaltyCheckBox" text="Enroll me for points" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label fx:id="guestErrorLabel" styleClass="error-label" visible="false" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
</GridPane>
