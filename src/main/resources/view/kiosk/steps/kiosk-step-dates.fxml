<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.blueharbor.hotel.controller.kiosk.DateStepController"
      spacing="12">
    <Label text="When will you visit Aurora Bay?" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <HBox spacing="12">
        <VBox spacing="6">
            <Label text="Check-in"/>
            <DatePicker fx:id="checkInPicker"/>
        </VBox>
        <VBox spacing="6">
            <Label text="Check-out"/>
            <DatePicker fx:id="checkOutPicker"/>
        </VBox>
    </HBox>
    <Label fx:id="dateErrorLabel" styleClass="error-label" visible="false"/>
</VBox>
