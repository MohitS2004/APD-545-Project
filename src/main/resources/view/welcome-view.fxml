<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
           stylesheets="@../styles/app.css"
           fx:controller="com.blueharbor.hotel.controller.WelcomeController"
           styleClass="app-background">
    <VBox alignment="CENTER" spacing="24" maxWidth="420">
        <VBox alignment="CENTER" spacing="8">
            <Text text="Blue Harbor Hotel" style="-fx-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Label text="Welcome to our reservation system" style="-fx-text-fill: #e2e8f0; -fx-font-size: 14px;"/>
        </VBox>
        
        <VBox spacing="16" styleClass="card" prefWidth="380" alignment="CENTER">
            <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
            
            <Button text="Admin Login" styleClass="primary-button" prefWidth="300" prefHeight="50"
                    onAction="#handleAdminLogin"
                    style="-fx-font-size: 16px;"/>
            
            <Button text="Guest Booking" styleClass="secondary-button" prefWidth="300" prefHeight="50"
                    onAction="#handleGuestBooking"
                    style="-fx-font-size: 16px;"/>
            
            <Button text="Give Feedback" styleClass="secondary-button" prefWidth="300" prefHeight="50"
                    onAction="#handleFeedback"
                    style="-fx-font-size: 16px;"/>
        </VBox>
    </VBox>
</StackPane>
